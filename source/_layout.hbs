<!DOCTYPE html>
<html class="no-js">
	<head>
		<meta charset="utf-8" />

		<title>{{meta_title}}</title>

		<meta name="description" content="{{meta_description}}" />
		<meta name="viewport" content="width=device-width" />

		<meta name="HandheldFriendly" content="True" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		{{> social/open_graph}}
		{{> social/twitter}}

		<link rel="stylesheet" href="{{asset 'styles/application.css'}}" />
		<link rel="stylesheet" href="{{asset 'styles/prism/prism-okaidia.css'}}" />

		{{ghost_head}}
	</head>

	<body class="{{body_class}}">
		{{> branding}}

		<main role="main">{{{body}}}</main>

		{{> global_navigation}}

		{{#if pagination}}
			{{pagination}}
		{{/if}}

		{{> credits}}

		{{ghost_foot}}

		<script src="{{asset 'scripts/application.js'}}"></script>
		<script src="{{asset 'scripts/prism/prism.js'}}"></script>

		{{> google_analytics}}
		{{> woopra}}
	</body>
</html>
