{{!< default}}

{{> site_header_primary}}

<section>
	{{#foreach posts}}
		<article class="{{post_class}} excerpt">
			<header class="post-meta">
				<h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>

				<section class="author">
					<h4 class="author-name">{{author.name}}</h4>
				</section>

				{{> timestamp}}
			</header>

			<section class="post-excerpt">
				<p>{{excerpt}}</p>
			</section>

			<footer class="post-meta">
				<ul class="tag-cloud">
					{{#foreach tags}}
						<li class="tag">{{name}}</li>
					{{/foreach}}
				</ul>
			</footer>
		</article>
	{{/foreach}}
</section>

{{pagination}}
